<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MigrationTarget.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MigrationTarget"
    xmlns:views="clr-namespace:MigrationTarget.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MigrationTarget">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Lottie"
            ContentTemplate="{DataTemplate views:LottiePage}"
            Route="LottiePage" />

        <ShellContent
            Title="PDF"
            ContentTemplate="{DataTemplate views:PdfPage}"
            Route="PdfPage" />

        <ShellContent
            Title="Message"
            ContentTemplate="{DataTemplate views:BroadcastMessagePage}"
            Route="BroadcastMessagePage" />
    </TabBar>
</Shell>
